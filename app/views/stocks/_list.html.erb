<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current price</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker %></td>
        <td><%= stock.price %></td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to 'Delete', user_stock_path(stock.user_stocks.where(user_id: @user.id).first.id), :method => :delete, 
            :data => {:confirm => "Are you sure?"}, :class => "btn btn-xs btn-danger" %>
          </td>
        <% end %>
      </tr> 
    <% end %>  
  </tbody>
</table>